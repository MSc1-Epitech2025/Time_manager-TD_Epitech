type LeaveType {
  code: String!
  label: String!
}

input LeaveTypeCreateInput {
  code: String!
  label: String!
}

input LeaveTypeUpdateInput {
  code: String!
  label: String
}

extend type Query {
  leaveTypes: [LeaveType!]!
  leaveType(code: String!): LeaveType
}

extend type Mutation {
  createLeaveType(input: LeaveTypeCreateInput!): LeaveType!
  updateLeaveType(input: LeaveTypeUpdateInput!): LeaveType!
  deleteLeaveType(code: String!): Boolean!
}

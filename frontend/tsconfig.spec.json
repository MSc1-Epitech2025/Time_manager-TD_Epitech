{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jest", "node"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    "baseUrl": "src",

    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@kpi/*": ["app/kpi/*"],
      "@modal/*": ["app/modal/*"],
      "@auth/*": ["app/auth/*"],
      "@pages/*": ["app/pages/*"],
      "@environments/*": ["environments/*"]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "setup-jest.ts"
  ]
}
